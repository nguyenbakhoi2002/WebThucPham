@model WebThucPham.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm" + Model.ProductName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="admin" asp-controller="home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="admin" asp-controller="adminproducts" asp-action="index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin sản phẩm @Model.ProductName : </span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin sản phẩm @Model.ProductName :</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.ProductId</td>
                    </tr>
                    <tr>
                        <td>Ảnh đại diện  :</td>
                        <td>
                            <img width="200px" height="200px" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                        </td>
                    </tr>
                    <tr>
                        <td>Tên sản phẩm:</td>
                        <td>@Model.ProductName</td>
                    </tr>
                    <tr>
                        <td>Mô tả ngắn:</td>
                        <td>@Model.ShortDesc</td>
                    </tr>
                    <tr>
                        <td>Mô tả :</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Danh mục :</td>
                        <td>@Model.Cat.CatName</td>
                    </tr>
                    <tr>
                        <td>Giá bán :</td>
                        <td>@Model.Price VNĐ</td>
                    </tr>
                    <tr>
                        <td>Giảm giá :</td>
                        <td>@Model.Discount %</td>
                    </tr>

                    <tr>
                        <td>Video :</td>
                        <td>@Model.Video</td>
                    </tr>
                    <tr>
                        <td>Ngày tạo :</td>
                        <td>@Model.DateCreated</td>
                    </tr>
                    <tr>
                        <td>Ngày chỉnh sửa :</td>
                        <td>@Model.DateModified</td>
                    </tr>
                    <tr>
                        <td>Best Sellers :</td>
                        <td>@Model.BestSellers</td>
                    </tr>
                    <tr>
                        <td>Home Flag :</td>
                        <td>@Model.HomeFlag</td>
                    </tr>
                    <tr>
                        <td>Active :</td>
                        <td>@Model.Active</td>
                    </tr>
                    <tr>
                        <td>Tags :</td>
                        <td>@Model.Tags</td>
                    </tr>
                    <tr>
                        <td>Tiêu đề :</td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td>Alias :</td>
                        <td>@Model.Alias</td>
                    </tr>
                    <tr>
                        <td>MetaDesc :</td>
                        <td>@Model.MetaDesc</td>
                    </tr>
                    <tr>
                        <td>MetaKey :</td>
                        <td>@Model.MetaKey</td>
                    </tr>
                    <tr>
                        <td>UnitsInStock :</td>
                        <td>@Model.UnitsInStock</td>
                    </tr>
                    <tr>
                        <td>Xác nhận xóa :</td>
                        <td>
                            <form asp-controller="adminproducts" asp-action="Delete" asp-route-id="@Model.ProductId">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Xác nhận xóa" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



